<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CoverYourAss.MainPage">

    <StackLayout>
        <!-- CollectionView to display the list of tasks -->
        <CollectionView x:Name="TasksCollectionView" SelectionMode="Single" SelectionChanged="OnSelectionChanged">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Orientation="Horizontal" Padding="10">
                        <Label Text="{Binding Name}" FontSize="Medium"/>
                        <!-- Add other task properties here as needed -->
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Add Button at the bottom -->
        <Button Text="Add Task" Clicked="OnAddButtonClicked"/>
    </StackLayout>

</ContentPage>