<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CoverYourAss.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="using:CoverYourAss.Views"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:ActivityListView}"
        Route="ActivityListView" />
    <ShellContent
        Title="ActivityDetailsView"
        ContentTemplate="{DataTemplate views:ActivityDetailsView}"
        Route="ActivityDetailsView" />

</Shell>
