<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:CoverYourAss.ViewModels"
             x:Class="CoverYourAss.Views.ActivityDetailsView"
             x:DataType="viewmodels:ActivityDetailsViewModel">

    <ContentPage.BindingContext>
        <viewmodels:ActivityDetailsViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <StackLayout Padding="20">
            <!-- Entry field for the activity name -->
            <Entry x:Name="Name" 
                   Placeholder="Activity Name"
                   Text="{Binding ActivityToEdit.Name}"/>

            <!-- Editor field for the activity description -->
            <Editor x:Name="Description" 
                    Placeholder="Activity Description" 
                    AutoSize="TextChanges"
                    Text="{Binding ActivityToEdit.Description}"/>

            <!-- Button to save the activity -->
            <Button Text="Save Activity" 
                    Command="{Binding SaveActivityCommand}"/>

            <!-- Button to delete the activity -->
            <Button Text="Delete Activity" 
                    Command="{Binding DeleteActivityCommand}"/>

            <!-- Button to cancel the edit -->
            <Button Text="Cancel" 
                    Command="{Binding CancelCommand}"/>
        </StackLayout>
    </ScrollView>
</ContentPage>